<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si existe archivo o carpeta real, lo sirve normal.
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Si no existe (rutas SPA como /reset-password), redirige a index.html.
  RewriteRule ^ index.html [L]
</IfModule>
